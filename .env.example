# Environment Configuration for MCP Server and Streamlit Demo

# Required: Anthropic API Key (for Streamlit Demo)
# Get your API key from: https://console.anthropic.com
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Database Configuration
DB_PATH=/path/to/simulation.db
DB_POOL_SIZE=5
DB_QUERY_TIMEOUT=30
DB_READ_ONLY=true

# Cache Configuration
CACHE_ENABLED=true
CACHE_MAX_SIZE=100
CACHE_TTL_SECONDS=300

# Server Configuration
LOG_LEVEL=INFO
MAX_RESULT_SIZE=10000
DEFAULT_LIMIT=100
